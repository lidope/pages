@import 'vendor.styl'
$speed = .8s // 总速度
_orageCenter()
    -webkit-transform-origin: center
    -moz-transform-origin: center
    -ms-transform-origin: center
    -o-transform-origin: center
    transform-origin: center

.animate
    animation-duration $speed
    animation-fill-mode both
    animation-timing-function ease-in

    &.duration00
        animation-duration 0s

    &.duration01
        animation-duration .1s

    &.duration02
        animation-duration .2s

    &.duration03
        animation-duration .3s

    &.duration04
        animation-duration .4s

    &.duration05
        animation-duration .5s

    &.duration06
        animation-duration .6s

    &.duration07
        animation-duration .7s

    &.duration08
        animation-duration .8s

    &.duration09
        animation-duration .9s

    &.duration10
        animation-duration 1s

    &.duration11
        animation-duration 1.1s

    &.duration12
        animation-duration 1.2s

    &.duration13
        animation-duration 1.3s

    &.duration14
        animation-duration 1.4s

    &.duration15
        animation-duration 1.5s

    &.duration16
        animation-duration 1.6s

    &.duration17
        animation-duration 1.7s

    &.duration18
        animation-duration 1.8s

    &.duration19
        animation-duration 1.9s

    &.duration20
        animation-duration 2s

    &.duration25
        animation-duration 2.5s

    &.duration30
        animation-duration 3s

    // 隐藏到显示

    &.animate_showToHide
        -webkit-animation-name showOpacity
        animation-name showOpacity

        @keyframes showOpacity
            0%
                opacity 0
                transform-origin(50% 50%)
                filter(blur(2px))

            100%
                opacity 1
                transform-origin(50% 50%)
                filter(blur(0px))

    // 显示到隐藏

    &.animate_hideToShow
        -webkit-animation-name hideOpacity
        animation-name hideOpacity

        @keyframes hideOpacity
            0%
                opacity 1
                transform-origin(50% 50%)
                filter(blur(2px))

            100%
                opacity 0
                transform-origin(50% 50%)
                filter(blur(0px))

    // 由大到小

    &.animate_BigToSmall
        -webkit-animation-name: bigToSmall
        animation-name bigToSmall

    @keyframes bigToSmall
        0%
            opacity 0
            transform-origin(50% 50%)
            transform(scale(1.4))
            filter(blur(2px))

        100%
            opacity 1
            transform-origin(50% 50%)
            transform(scale(1))
            filter(blur(0px))

    // 由小到大

    &.animate_SmallToBig
        -webkit-animation-name: smallToBig
        animation-name smallToBig
        _orageCenter()

    @keyframes smallToBig
        0%
            opacity 0
            transform-origin(50% 50%)
            transform(scale(.4))
        //filter(blur(2px))

        100%
            opacity 1
            transform-origin(50% 50%)
            transform(scale(1))
    //filter(blur(0px))

    // 从下至上

    &.animate_DownToUp
        -webkit-animation-name: downToUp
        animation-name: downToUp

    @keyframes downToUp
        0%
            transform(translateY(200px))
            opacity 0

        40%
            opacity 0

        100%
            transform(translateY(0px))

    // 从上至下

    &.animate_UpToDown
        -webkit-animation-name: upToDown
        animation-name: upToDown

    @keyframes upToDown
        0%
            transform(translateY(-200px))
            opacity 0

        40%
            opacity 0

        100%
            transform(translateY(0px))

    // 从左至右

    &.animate_LeftToRight
        -webkit-animation-name: leftToRight
        animation-name: leftToRight

    @keyframes leftToRight
        0%
            transform(translateX(-200px))
            opacity 0

        40%
            opacity 0

        100%
            transform(translateY(0))

    // 从右至左

    &.animate_RightToLeft
        -webkit-animation-name: rightToLeft
        animation-name: rightToLeft

    @keyframes rightToLeft
        0%
            transform(translateX(200px))
            opacity 0

        40%
            opacity 0

        100%
            transform(translateY(0))

    // 从右向左滚动

    &.animate_ScrollRightIn
        animation-name scrollRightIn

    @keyframes scrollRightIn
        0%
            opacity 0
            transform(translateX(500%) rotateZ(-720deg))

        100%
            transform(translateX(0%) rotateZ(0deg))

    // 从左向右滚动

    &.animate_ScrollLeftIn
        animation-name scrollLeftIn

    @keyframes scrollLeftIn
        0%
            opacity 0
            transform(translateX(-500%) rotateZ(720deg))

        100%
            transform(translateX(-0%) rotateZ(0deg))

    // 无顺时针限循转
    &.animate_rotate
        animation: rotate 3s linear infinite;

        @keyframes rotate
            from
                transform(rotate(0deg))
            to
                transform(rotate(360deg))

    // 虚化显示
    &.animate_puffIn
        animation-name puffIn

        @keyframes puffIn
            0%
                opacity 0
                transform-origin 50% 50%
                transform scale(2, 2)
                filter blur(2px)

            100%
                opacity 1
                transform-origin 50% 50%
                transform scale(1, 1)
                filter blur(0px)

    // 虚化隐藏
    &.animate_puffOut
        animation-name puffOut

        @keyframes puffOut
            0%
                opacity 1
                transform-origin(50% 50%)
                transform(scale(1, 1))
                filter blur(0px)

            100%
                opacity 0
                transform-origin(50% 50%)
                transform(scale(2, 2))
                filter blur(2px)

    // 旋转显示
    &.animate_scaleIn
        animation-name scaleIn

        @keyframes scaleIn
            0%
                opacity 0
                transform-origin 50% 50%
                transform scale(0, 0) rotateY(180deg)

            100%
                opacity 1
                transform-origin 50% 50%
                transform scale(1, 1) rotateY(0deg)

    // 旋转显示
    &.animate_scaleOut
        animation-name scaleOut

        @keyframes scaleOut
            0%
                opacity 1
                transform-origin 50% 50%
                transform scale(1, 1) rotateY(0deg)

            100%
                opacity 0
                transform-origin 50% 50%
                transform scale(0, 0) rotateY(180deg)

    &.animate_bounceIn
        animation-name bounceIn

        @keyframes bounceIn
            0%
                opacity 0
                transform scale(.3)

            50%
                opacity 1
                transform scale(1.05)

            70%
                -webkit-transform scale(.9)

            100%
                opacity 1
                transform scale(1)

